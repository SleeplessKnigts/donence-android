<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sleeplessknights.donence.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.sleeplessknights.donence.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_dropoff"
        android:name="com.sleeplessknights.donence.ui.dropoff.DropoffFragment"
        android:label="@string/title_dropoff"
        tools:layout="@layout/fragment_dropoff" />

    <activity
        android:id="@+id/navigation_map"
        android:name="com.sleeplessknights.donence.AddressActivity"
        android:label="Address Activity"
        tools:layout="@layout/activity_address" />

</navigation>